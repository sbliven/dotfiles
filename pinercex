title-background-color=blue
status-foreground-color=white
status-background-color=red
keylabel-foreground-color=white
keylabel-background-color=blue
keyname-foreground-color=black
keyname-background-color=white
selectable-item-foreground-color=
selectable-item-background-color=
quote1-foreground-color=cyan
quote1-background-color=white
quote2-foreground-color=magenta
quote2-background-color=white
quote3-foreground-color=blue
quote3-background-color=white
prompt-foreground-color=
prompt-background-color=
index-to-me-foreground-color=blue
index-to-me-background-color=white
index-important-foreground-color=
index-important-background-color=
index-deleted-foreground-color=red
index-deleted-background-color=white
index-answered-foreground-color=green
index-answered-background-color=white
index-new-foreground-color=black
index-new-background-color=red
index-recent-foreground-color=
index-recent-background-color=
index-unseen-foreground-color=
index-unseen-background-color=

# When viewing messages, these are the header colors
viewer-hdr-colors=/HDR=From/FG=blue/BG=white,
	/HDR=Date/FG=blue/BG=white,
	/HDR=Reply-To/FG=blue/BG=white,
	/HDR=Subject/FG=yellow/BG=black,
	/HDR=To/FG=blue/BG=white

