#if os.path.abspath(os.curdir) == os.path.expanduser('~') or sys.version_info < (3,5): \
os.chdir(os.path.expanduser('~/pdb'))

alias centroid_spheres,\
	hide everything, name CEN; \
	create centroids, name CEN; \
	set sphere_transparency, 0.8, centroids; \
	show spheres, centroids

alias show_cys,\
	hide everything; \
	show cartoon; \
	show lines, not (name c+n+o+h); \
	hide lines, hydrogens; \
	show sticks, resn cys and name CA+CB+SG

alias pp,\
    util.cbc;\
    hide lines;\
    show cartoon;\
    show sticks, resn CYS and name CA+CB+SG;\
    color yellow, name SG

one_letter ={'VAL':'V', 'ILE':'I', 'LEU':'L', 'GLU':'E', 'GLN':'Q', \
